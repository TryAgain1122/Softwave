{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["src/node_modules/@types"]
  },
  "include": ["src/**/*", "src/confignfig"],
  "exclude": ["src/node_modules", "dist"]
}